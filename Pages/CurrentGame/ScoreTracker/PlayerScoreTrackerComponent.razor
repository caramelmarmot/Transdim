@inject Transdim.Service.Controllers.CurrentGame.ScoreTracker.IPlayerScoreTrackerComponentController controller;

<div class="@GetActiveClass(player)" style="background-color:@GetColor(player)">@GetScore(player)</div>

@functions {
    [Parameter]
    private Player player { get; set; }

    protected override void OnInit() => controller.OnInit(StateHasChanged, player);

    public string GetColor(Player player) => controller.GetColor(player);

    public int GetScore(Player player) => controller.GetScore(player);


    public string GetActiveClass(Player player) => controller.GetActiveClass(player);
}