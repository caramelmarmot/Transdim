@using Transdim.DomainModel.GameComponents;

@inject Blazored.Modal.Services.IModalService ModalService;
@inject Transdim.Service.IGameStateService GameStateService;
@inject Transdim.Service.IComponentActivationService ComponentActivationService;
@inject Transdim.Utilities.UiQueueUtility UiQueueUtility;

<div class="row">
    <GameComponentIcon onclick="@(() => PerformAction(GameComponents.ActionPowerAction))" gameComponent="@GameComponents.ActionPowerAction"></GameComponentIcon>
</div>


@functions {
    private void PerformAction(IGameComponent selectedComponent)
    {
        ComponentActivationService.Activate(selectedComponent);
        UiQueueUtility.Execute();
    }
}