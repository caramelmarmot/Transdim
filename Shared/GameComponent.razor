@using Transdim.DomainModel.GameComponents;
@inject Transdim.Service.Controllers.Shared.IGameComponentController GameComponentController;

<img class="game-component @Class" @onclick="@PerformAction" src="@component.ImagePath" asp-append-version="true" />

@functions {
    [Parameter]
    public IGameComponent component { get; set; }

    [Parameter]
    public Action OnClickAddition { get; set; }

    [Parameter]
    public string Class { get; set; }

    private void PerformAction()
    {
        GameComponentController.Activate(component);
        OnClickAddition?.Invoke();
    }
}